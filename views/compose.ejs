<%- include("partials/header") -%>

<h1>Compose</h1>

<form action="/compose" method="POST">
    <div class="form-group">
        <label><b>Title</b></label>
        <input type="text" class="form-control" name="cTitle" autocomplete="off">
        <label><b>Post</b></label>
        <textarea type="text" class="form-control" name="cMessage" autocomplete="off" rows="5"></textarea>
    </div>
    <button type="submit" name="button" class="btn btn-primary submit-button">Publish</button>
</form>

<%- include("partials/footer") -%>